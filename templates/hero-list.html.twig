{% extends "base.html.twig" %}

{% block head parent() %}

{% block content %} 
{% set img = '/a/img/heroes/' %}
{% set ext = '.jpg' %}
<div class="hero">
    <div class="srt left">
        <div class="unselectable hidden">
            <span>Sort:</span>
            <span class="button sort sHP">HP</span>
            <span class="button sort sDMG">DMG</span>
            <span class="button sort sARMOR">ARMOR</span>
        </div>
        <div class="unselectable">
            <span>Type:</span>
            <span class="button filter fRange" data-name="range">RANGE</span>
            <span class="button filter fMelee" data-name="melee">MELEE</span>
        </div>
        <div class="unselectable">
            <span>Side:</span>
            <span class="button filter fLegion" data-name="le">LEGION</span>
            <span class="button filter fHellbourne" data-name="hb">HELLBOURNE</span>
        </div>
        <div class="unselectable">
            <span>Stat:</span>
            <span class="button filter fAgi" data-name="agi">AGI</span>
            <span class="button filter fInt" data-name="int">INT</span>
            <span class="button filter fStr" data-name="str">STR</span>
        </div>
    </div>
    <div class="search right">
        <form action="/search" method="post">
            <input type="text" id="search" name="_search" placeholder="Search Hero" value="" title="You can search by name, or part of a name: Keeper, SS, TDL, BH" />
        </form>
    </div>
    <div class="clear"></div>

    <div class="team left">
        <h1>Agility</h1>
        <ul class='hero-list'>
        {% for hero in heroes %}
            {% if hero.getTeam == 'Legion' and hero.getStat == 'Agility' %}
                <li style='position:relative;' 
                data-hp="{{ hero.getHP }}" data-dmg="{{ hero.getDmgMax }}" data-armor="{{ hero.getArmor }}" data-diff="{{ hero.getDifficulty }}" 
                title="{{ hero.getName }}" 
                class="tooltip 
                {% if hero.getAttackRange > 150 %}range{% else %}melee{% endif %}
                {% if hero.getTeam == 'Legion' %}le{% else %}hb{% endif %}
                {% if hero.getStat == 'Agility' %}agi{% elseif hero.getStat == 'Intelligence' %}int{% else %}str{% endif %}">
                    <a href="/hero/{{ hero.getSlug }}">
                        <img class='hero-icon-50px' src="{{ img ~ hero.getSlug ~ ext }}" />
                        <div class="overlay"></div>
                    </a>
                </li>
            {% endif %}
        {% endfor %}
        </ul>

